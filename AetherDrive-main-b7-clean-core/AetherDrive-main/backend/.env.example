# Backend
NODE_ENV=development
PORT=10000

# DB
DATABASE_URL=

# One-time bootstrap (run: npm run db:bootstrap)
# BOOTSTRAP_API_KEY is the plaintext key; it will be hashed and only the hash stored.
BOOTSTRAP_API_KEY=
BOOTSTRAP_ORG_ID=00000000-0000-0000-0000-000000000001
BOOTSTRAP_ORG_NAME=Demo Org

# Auth (optional in pilot/dev; required in prod)
JWT_SECRET=

# Integrations
INTEGRATION_KEY=change_me
PB_ALLOW_INSECURE_INTEGRATIONS=true
INTEGRATION_ENDPOINT=https://aetherdrive.onrender.com/api/metrics

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173

# Cryptographic signing (B7)
SIGNING_KEY_CURRENT=change_me_to_a_long_random_secret
SIGNING_KEY_PREVIOUS=
SIGNING_KEY_VERSION=1
