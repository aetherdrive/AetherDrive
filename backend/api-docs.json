{
  "openapi": "3.0.0",
  "info": {
    "title": "PayBridge Payroll API",
    "version": "1.0.0",
    "description": "Denne spesifikasjonen beskriver de eksperimentelle lønnsendepunktene levert av PayBridge-backenden. Hvert endepunkt returnerer JSON og krever at en gyldig integrasjonsnøkkel sendes via X-PAYBRIDGE-KEY-headeren."
  },
  "paths": {
    "/api/payroll-runs": {
      "post": {
        "summary": "Create a new payroll run",
        "description": "Creates a new payroll run for a given period and company. If company_id is omitted it defaults to 1.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "company_id": {
                    "type": "integer",
                    "description": "Identifier for the company the run belongs to"
                  },
                  "period_start": {
                    "type": "string",
                    "format": "date"
                  },
                  "period_end": {
                    "type": "string",
                    "format": "date"
                  },
                  "pay_date": {
                    "type": "string",
                    "format": "date"
                  },
                  "currency": {
                    "type": "string",
                    "default": "NOK"
                  },
                  "rule_set_version": {
                    "type": "string",
                    "default": "v1"
                  }
                },
                "required": ["period_start", "period_end", "pay_date"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Run created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/payroll-runs/{id}/import": {
      "post": {
        "summary": "Import input items for a payroll run",
        "description": "Adds input items (e.g. time events or adjustments) to an existing payroll run. Requires the run to be in draft or calculated state.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "amount": { "type": "number" },
                        "line_type": { "type": "string" }
                      },
                      "required": ["amount", "line_type"]
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Run updated",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          },
          "409": {
            "description": "Invalid operation or run not found"
          }
        }
      }
    },
    "/api/payroll-runs/{id}/calculate": {
      "post": {
        "summary": "Calculate totals for a payroll run",
        "description": "Computes totals for a run without committing it. Requires the run to be in draft or calculated state.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Run totals returned",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          },
          "409": {
            "description": "Invalid operation or run not found"
          }
        }
      }
    },
    "/api/payroll-runs/{id}/approve": {
      "post": {
        "summary": "Approve a payroll run",
        "description": "Approves a payroll run that has been calculated. Requires status = calculated.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "approver_id": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Run approved" },
          "409": { "description": "Invalid operation or run not found" }
        }
      }
    },
    "/api/payroll-runs/{id}/commit": {
      "post": {
        "summary": "Commit a payroll run",
        "description": "Locks a run and computes an immutable checksum. Requires status = approved.",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Run committed" },
          "409": { "description": "Invalid operation or run not found" }
        }
      }
    },
    "/api/payroll-runs/{id}/reconciliation": {
      "get": {
        "summary": "Get reconciliation summary for a payroll run",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Reconciliation returned" },
          "404": { "description": "Run not found" }
        }
      }
    }
  }
}